{% if flash_message is not empty %}
    <div id="toast-notification" class="fixed top-5 right-5 z-50 flex items-center w-full max-w-xs p-4 rounded-lg shadow-lg 
        {% if flash_message.type == 'success' %}
            bg-green-100 text-green-700
        {% elseif flash_message.type == 'error' %}
            bg-red-100 text-red-700
        {% else %}
            bg-gray-100 text-gray-700
        {% endif %}" role="alert">
        <div class="inline-flex items-center justify-center flex-shrink-0 w-8 h-8
            {% if flash_message.type == 'success' %}
                bg-green-200 text-green-600
            {% elseif flash_message.type == 'error' %}
                bg-red-200 text-red-600
            {% else %}
                bg-gray-200 text-gray-600
            {% endif %} rounded-lg">
            {% if flash_message.type == 'success' %}
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path></svg>
            {% elseif flash_message.type == 'error' %}
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.697a1 1 0 010-1.414z" clip-rule="evenodd"></path></svg>
            {% endif %}
        </div>
        <div class="ms-3 text-sm font-medium">{{ flash_message.message }}</div>
        <button type="button" class="ms-auto -mx-1.5 -my-1.5 rounded-lg focus:ring-2 p-1.5 inline-flex items-center justify-center h-8 w-8
            {% if flash_message.type == 'success' %}
                bg-green-100 text-green-500 focus:ring-green-400 hover:bg-green-200
            {% elseif flash_message.type == 'error' %}
                bg-red-100 text-red-500 focus:ring-red-400 hover:bg-red-200
            {% else %}
                bg-gray-100 text-gray-500 focus:ring-gray-400 hover:bg-gray-200
            {% endif %}" data-dismiss-target="#toast-notification" aria-label="Close">
            <span class="sr-only">Close</span>
            <svg class="w-3 h-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 14">
                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6"/>
            </svg>
        </button>
    </div>
{% endif %}